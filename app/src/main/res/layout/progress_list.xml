<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/bgcolor"

    >

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide_start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.05" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide_end"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.95" />

    <View
        android:id="@+id/rectanglebg"
        android:layout_width="0dp"
        android:layout_height="69dp"
        android:background="@drawable/top_rectangle"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <ImageView
        android:id="@+id/Clickback"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="@drawable/left"
        android:contentDescription="Back Button"
        android:clickable="true"
        app:layout_constraintStart_toStartOf="@id/guide_start"
        app:layout_constraintTop_toTopOf="@id/rectanglebg"
        app:layout_constraintBottom_toBottomOf="@id/rectanglebg"
        android:layout_marginStart="16dp" />
    <TextView
        android:id="@+id/ChangeableHobbyName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Hobby Name"
        android:textSize="20sp"
        android:textColor="#205375"
        android:fontFamily="@font/inter_bold"
        app:layout_constraintTop_toTopOf="@id/rectanglebg"
        app:layout_constraintStart_toEndOf="@id/Clickback"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="27dp"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/progress_percent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Progress"
        android:textColor="#205375"
        android:textSize="20sp"
        android:fontFamily="@font/inter_bold"


        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rectanglebg"
        android:layout_marginTop="24dp"
        android:layout_marginStart="27dp"
        android:layout_marginEnd="243dp"/>

    <ScrollView
        android:id="@+id/ScrollViewHobbits"
        android:layout_width="321dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/progress_percent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="34dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:layout_width="321dp"
                android:layout_height="37dp"
                android:background="@drawable/hobbitsbg"/>

            <TextView
                android:id="@+id/FirstHobbitsProgress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1. Hobbits 1.0"
                android:textSize="14sp"
                android:textColor="#205375"
                android:fontFamily="@font/inter_bold"
                android:textFontWeight="700"
                android:layout_marginTop="9dp"
                android:layout_marginStart="18dp"/>
            <Button
                android:layout_width="64dp"
                android:layout_height="24dp"
                android:text="Scheduled"
                android:textSize="10sp"
                android:textColor="#FDF8F0"
                android:fontFamily="@font/inter_light"
                android:textFontWeight="300"
                android:padding="0dp"
                android:backgroundTint="#205375"
                android:layout_marginTop="9dp"
                android:layout_marginStart="243dp"/>
            <View
                android:layout_width="321dp"
                android:layout_height="95dp"
                android:background="@drawable/underhobbitsbg"
                android:layout_marginTop="37dp"/>

            <TextView
                android:id="@+id/hobbitsprogress1.1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hobbits 1.1"
                android:textSize="11sp"
                android:textColor="#000"
                android:fontFamily="@font/inter_light"
                android:textFontWeight="300"
                android:layout_marginTop="49dp"
                android:layout_marginStart="38dp"
                android:clickable="true"/>
            <ImageView
                android:id="@+id/xprogress1.1"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/unchecked_progress"
                android:layout_marginTop="45dp"
                android:layout_marginStart="261dp"
                android:clickable="true"/>

            <TextView
                android:id="@+id/hobbitsprogress1.2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hobbits 1.2"
                android:textSize="11sp"
                android:textColor="#000"
                android:fontFamily="@font/inter_light"
                android:textFontWeight="300"
                android:layout_marginTop="74dp"
                android:layout_marginStart="38dp"
                android:clickable="true"/>
            <ImageView
                android:id="@+id/xprogress1.2"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/unchecked_progress"
                android:layout_marginTop="70dp"
                android:layout_marginStart="261dp"
                android:clickable="true"/>

            <TextView
                android:id="@+id/hobbitsprogress1.3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hobbits 1.3"
                android:textSize="11sp"
                android:textColor="#000"
                android:fontFamily="@font/inter_light"
                android:textFontWeight="300"
                android:layout_marginTop="99dp"
                android:layout_marginStart="38dp"
                android:clickable="true"/>
            <ImageView
                android:id="@+id/xprogress1.3"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/unchecked_progress"
                android:layout_marginTop="95dp"
                android:layout_marginStart="261dp"
                android:clickable="true"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <View
                    android:layout_width="321dp"
                    android:layout_height="37dp"
                    android:background="@drawable/hobbitsbg"
                    android:layout_marginTop="162dp"/>
                <TextView
                    android:id="@+id/SecondHobbitsProgress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2. Hobbits 2.0"
                    android:textSize="14sp"
                    android:textColor="#205375"
                    android:fontFamily="@font/inter_bold"
                    android:textFontWeight="700"
                    android:layout_marginTop="171dp"
                    android:layout_marginStart="18dp"/>
                <Button
                    android:id="@+id/SecondHobbitsDeleteProgress"
                    android:layout_width="64dp"
                    android:layout_height="24dp"
                    android:text="Scheduled"
                    android:textSize="10sp"
                    android:textColor="#FDF8F0"
                    android:fontFamily="@font/inter_light"
                    android:textFontWeight="300"
                    android:padding="0dp"
                    android:backgroundTint="#205375"
                    android:layout_marginTop="170dp"
                    android:layout_marginStart="243dp"/>

                <View
                    android:layout_width="321dp"
                    android:layout_height="95dp"
                    android:background="@drawable/underhobbitsbg"
                    android:layout_marginTop="199dp"/>

                <TextView
                    android:id="@+id/hobbitsprogress2.1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hobbits 2.1"
                    android:textSize="11sp"
                    android:textColor="#000"
                    android:fontFamily="@font/inter_light"
                    android:textFontWeight="300"
                    android:layout_marginTop="211dp"
                    android:layout_marginStart="38dp"
                    android:clickable="true"/>
                <ImageView
                    android:id="@+id/xprogress2.1"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/unchecked_progress"
                    android:layout_marginTop="208dp"
                    android:layout_marginStart="261dp"
                    android:clickable="true"/>

                <TextView
                    android:id="@+id/hobbitsprogress2.2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hobbits 2.2"
                    android:textSize="11sp"
                    android:textColor="#000"
                    android:fontFamily="@font/inter_light"
                    android:textFontWeight="300"
                    android:layout_marginTop="236dp"
                    android:layout_marginStart="38dp"
                    android:clickable="true"/>
                <ImageView
                    android:id="@+id/xprogress2.2"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/unchecked_progress"
                    android:layout_marginTop="234dp"
                    android:layout_marginStart="261dp"
                    android:clickable="true"/>

                <TextView
                    android:id="@+id/hobbitsprogress2.3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hobbits 2.2"
                    android:textSize="11sp"
                    android:textColor="#000"
                    android:fontFamily="@font/inter_light"
                    android:textFontWeight="300"
                    android:layout_marginTop="261dp"
                    android:layout_marginStart="38dp"
                    android:clickable="true"/>
                <ImageView
                    android:id="@+id/xprogress2.3"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/unchecked_progress"
                    android:layout_marginTop="260dp"
                    android:layout_marginStart="261dp"
                    android:clickable="true"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <View
                    android:layout_width="321dp"
                    android:layout_height="37dp"
                    android:background="@drawable/hobbitsbg"
                    android:layout_marginTop="324dp"/>
                <TextView
                    android:id="@+id/ThirdHobbitsProgress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3. Hobbits 3.0"
                    android:textSize="14sp"
                    android:textColor="#205375"
                    android:fontFamily="@font/inter_bold"
                    android:textFontWeight="700"
                    android:layout_marginTop="333dp"
                    android:layout_marginStart="18dp"/>
                <Button
                    android:id="@+id/ThirdHobbitsDeleteProgress"
                    android:layout_width="64dp"
                    android:layout_height="24dp"
                    android:text="Scheduled"
                    android:textSize="10sp"
                    android:textColor="#FDF8F0"
                    android:fontFamily="@font/inter_light"
                    android:textFontWeight="300"
                    android:padding="0dp"
                    android:backgroundTint="#205375"
                    android:layout_marginTop="333dp"
                    android:layout_marginStart="243dp"/>

                <View
                    android:layout_width="321dp"
                    android:layout_height="95dp"
                    android:background="@drawable/underhobbitsbg"
                    android:layout_marginTop="361dp"/>

                <TextView
                    android:id="@+id/hobbitsprogress3.1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hobbits 3.1"
                    android:textSize="11sp"
                    android:textColor="#000"
                    android:fontFamily="@font/inter_light"
                    android:textFontWeight="300"
                    android:layout_marginTop="373dp"
                    android:layout_marginStart="38dp"
                    android:clickable="true"/>
                <ImageView
                    android:id="@+id/xprogress3.1"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/unchecked_progress"
                    android:layout_marginTop="371dp"
                    android:layout_marginStart="261dp"
                    android:clickable="true"/>

                <TextView
                    android:id="@+id/hobbitsprogress3.2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hobbits 3.2"
                    android:textSize="11sp"
                    android:textColor="#000"
                    android:fontFamily="@font/inter_light"
                    android:textFontWeight="300"
                    android:layout_marginTop="398dp"
                    android:layout_marginStart="38dp"
                    android:clickable="true"/>
                <ImageView
                    android:id="@+id/xprogress3.2"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/unchecked_progress"
                    android:layout_marginTop="396dp"
                    android:layout_marginStart="261dp"
                    android:clickable="true"/>

                <TextView
                    android:id="@+id/hobbitsprogress3.3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hobbits 3.2"
                    android:textSize="11sp"
                    android:textColor="#000"
                    android:fontFamily="@font/inter_light"
                    android:textFontWeight="300"
                    android:layout_marginTop="428dp"
                    android:layout_marginStart="38dp"
                    android:clickable="true"/>
                <ImageView
                    android:id="@+id/xprogress3.3"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/unchecked_progress"
                    android:layout_marginTop="426dp"
                    android:layout_marginStart="261dp"
                    android:clickable="true"/>

            </RelativeLayout>


        </RelativeLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>