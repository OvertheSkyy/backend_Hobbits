<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/bgcolor">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide_start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.05" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide_end"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.95" />

    <View
        android:id="@+id/rectanglebg"
        android:layout_width="0dp"
        android:layout_height="69dp"
        android:background="@drawable/top_rectangle"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <ImageView
        android:id="@+id/Clickmenu"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="@drawable/menu"
        android:contentDescription="Menu button"
        android:clickable="true"
        app:layout_constraintStart_toStartOf="@id/guide_start"
        app:layout_constraintTop_toTopOf="@id/rectanglebg"
        app:layout_constraintBottom_toBottomOf="@id/rectanglebg"
        android:layout_marginStart="16dp" />
    <ImageView
        android:id="@+id/ClickNotification"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="@drawable/setting"
        android:contentDescription="Notifications"
        android:clickable="true"
        app:layout_constraintEnd_toEndOf="@id/guide_end"
        app:layout_constraintTop_toTopOf="@id/rectanglebg"
        app:layout_constraintBottom_toBottomOf="@id/rectanglebg"
        android:layout_marginEnd="16dp"/>
    <TextView
        android:id="@+id/UserProfileTxt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="User Profile"
        android:textSize="20sp"
        android:textColor="#545454"
        android:fontFamily="@font/inter_light"
        android:textFontWeight="1000"
        app:layout_constraintTop_toTopOf="@id/rectanglebg"
        app:layout_constraintStart_toEndOf="@id/Clickmenu"
        app:layout_constraintEnd_toStartOf="@id/ClickNotification"
        android:layout_marginStart="27dp"
        android:layout_marginEnd="27dp"
        android:layout_marginTop="19dp"/>

    <ImageView
        android:id="@+id/ProfileImage"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:background="@drawable/profile_circle"
        android:scaleType="centerCrop"
        android:onClick="onProfileClick"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rectanglebg"
        android:layout_marginTop="23dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="255dp" />
    <TextView
        android:id="@+id/UserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textSize="20sp"
        android:textColor="#205375"
        android:fontFamily="@font/inter_light"
        android:textFontWeight="900"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rectanglebg"
        android:layout_marginTop="37dp"
        android:layout_marginStart="113dp"
        android:layout_marginEnd="191dp"/>
    <TextView
        android:id="@+id/UserID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="&#64;user id"
        android:textSize="12sp"
        android:textColor="#737373"
        android:fontFamily="@font/inter_light"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rectanglebg"
        android:layout_marginTop="60dp"
        android:layout_marginStart="113dp"
        android:layout_marginEnd="197dp"/>
    <Button
        android:layout_width="79dp"
        android:layout_height="29dp"
        android:text="Edit Profile"
        android:textSize="8sp"
        android:textColor="#545454"
        android:fontFamily="@font/inter_light"
        android:backgroundTint="#D9D9D9"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rectanglebg"
        android:layout_marginTop="50dp"
        android:layout_marginStart="256dp"
        android:layout_marginEnd="25dp"
        android:padding="0dp"/>
    <View
        android:id="@+id/Premiumbg"
        android:layout_width="274dp"
        android:layout_height="60dp"
        android:background="@drawable/premiumbg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ProfileImage"
        android:layout_marginTop="22dp"
        android:layout_marginStart="46dp"
        android:layout_marginEnd="40dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Upgrade to Premium"
        android:textSize="14sp"
        android:textColor="#000"
        android:fontFamily="@font/inter_light"
        android:textFontWeight="1000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ProfileImage"
        android:layout_marginTop="35dp"
        android:layout_marginStart="67dp"
        android:layout_marginEnd="156dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Unlock all Premium features"
        android:textSize="11sp"
        android:textColor="#545454"
        android:fontFamily="@font/inter_light"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ProfileImage"
        android:layout_marginTop="52dp"
        android:layout_marginStart="67dp"
        android:layout_marginEnd="150dp"/>
    <ImageView
        android:layout_width="41dp"
        android:layout_height="41dp"
        android:src="@drawable/premiumpic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ProfileImage"
        android:layout_marginTop="32dp"
        android:layout_marginStart="257dp"
        android:layout_marginEnd="62dp"/>
    <TextView
        android:id="@+id/txtHobbyOverview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hobby Overview"
        android:textSize="16sp"
        android:textColor="#205375"
        android:fontFamily="@font/inter_light"
        android:textFontWeight="900"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Premiumbg"
        android:layout_marginTop="23dp"
        android:layout_marginStart="43dp"
        android:layout_marginEnd="191dp"/>
    <View
        android:id="@+id/OnGoingbg"
        android:layout_width="121dp"
        android:layout_height="73dp"
        android:background="@drawable/overviewbg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtHobbyOverview"
        android:layout_marginTop="9dp"
        android:layout_marginStart="47dp"
        android:layout_marginEnd="192dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="#0"
        android:textSize="16sp"
        android:textColor="#205375"
        android:fontFamily="@font/inter_light"
        android:textFontWeight="900"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtHobbyOverview"
        android:layout_marginTop="31dp"
        android:layout_marginStart="97dp"
        android:layout_marginEnd="245dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="On-going Hobbies"
        android:textSize="10sp"
        android:textColor="#545454"
        android:fontFamily="@font/inter_light"
        android:textFontWeight="900"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtHobbyOverview"
        android:layout_marginTop="50dp"
        android:layout_marginStart="63dp"
        android:layout_marginEnd="210dp"/>
    <View
        android:id="@+id/Completedbg"
        android:layout_width="121dp"
        android:layout_height="73dp"
        android:background="@drawable/overviewbg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtHobbyOverview"
        android:layout_marginTop="9dp"
        android:layout_marginStart="183dp"
        android:layout_marginEnd="56dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="#0"
        android:textSize="16sp"
        android:textColor="#205375"
        android:fontFamily="@font/inter_light"
        android:textFontWeight="900"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtHobbyOverview"
        android:layout_marginTop="31dp"
        android:layout_marginStart="234dp"
        android:layout_marginEnd="108dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Complted Hobbies"
        android:textSize="10sp"
        android:textColor="#545454"
        android:fontFamily="@font/inter_light"
        android:textFontWeight="900"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtHobbyOverview"
        android:layout_marginTop="50dp"
        android:layout_marginStart="196dp"
        android:layout_marginEnd="70dp"/>
    <RelativeLayout
        android:id="@+id/Communitybutton"
        android:layout_width="274dp"
        android:layout_height="37dp"
        android:background="@drawable/premiumbg"
        android:backgroundTint="#E8E2E2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Completedbg"
        android:layout_marginTop="27dp"
        android:layout_marginStart="43dp"
        android:layout_marginEnd="43dp">
        <ImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/communitypic"
            android:layout_marginTop="5dp"
            android:layout_marginStart="18dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Community"
            android:textSize="12sp"
            android:textColor="#000"
            android:fontFamily="@font/inter_light"
            android:layout_marginTop="11dp"
            android:layout_marginStart="57dp"/>
        <ImageView
            android:id="@+id/morebutton_community"
            android:layout_width="16dp"
            android:layout_height="19dp"
            android:src="@drawable/more_btn"
            android:layout_marginTop="9dp"
            android:layout_marginStart="234dp"
            android:layout_marginEnd="24dp"
            android:clickable="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/Achievementsbutton"
        android:layout_width="274dp"
        android:layout_height="37dp"
        android:background="@drawable/premiumbg"
        android:backgroundTint="#E8E2E2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Communitybutton"
        android:layout_marginTop="7dp"
        android:layout_marginStart="43dp"
        android:layout_marginEnd="43dp">
        <ImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/achievements"
            android:layout_marginTop="5dp"
            android:layout_marginStart="18dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Achievements"
            android:textSize="12sp"
            android:textColor="#000"
            android:fontFamily="@font/inter_light"
            android:layout_marginTop="11dp"
            android:layout_marginStart="57dp"/>
        <ImageView
            android:id="@+id/morebutton_achievements"
            android:layout_width="16dp"
            android:layout_height="19dp"
            android:src="@drawable/more_btn"
            android:layout_marginTop="9dp"
            android:layout_marginStart="234dp"
            android:layout_marginEnd="24dp"
            android:clickable="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/favoritebutton"
        android:layout_width="274dp"
        android:layout_height="37dp"
        android:background="@drawable/premiumbg"
        android:backgroundTint="#E8E2E2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Achievementsbutton"
        android:layout_marginTop="7dp"
        android:layout_marginStart="43dp"
        android:layout_marginEnd="43dp">
        <ImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/favorites"
            android:layout_marginTop="5dp"
            android:layout_marginStart="18dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Favorites"
            android:textSize="12sp"
            android:textColor="#000"
            android:fontFamily="@font/inter_light"
            android:layout_marginTop="11dp"
            android:layout_marginStart="57dp"/>
        <ImageView
            android:id="@+id/morebutton_favorites"
            android:layout_width="16dp"
            android:layout_height="19dp"
            android:src="@drawable/more_btn"
            android:layout_marginTop="9dp"
            android:layout_marginStart="234dp"
            android:layout_marginEnd="24dp"
            android:clickable="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/completedbutton"
        android:layout_width="274dp"
        android:layout_height="37dp"
        android:background="@drawable/premiumbg"
        android:backgroundTint="#E8E2E2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/favoritebutton"
        android:layout_marginTop="7dp"
        android:layout_marginStart="43dp"
        android:layout_marginEnd="43dp">
        <ImageView
            android:layout_width="27dp"
            android:layout_height="28dp"
            android:src="@drawable/completed"
            android:layout_marginTop="5dp"
            android:layout_marginStart="18dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Completed"
            android:textSize="12sp"
            android:textColor="#000"
            android:fontFamily="@font/inter_light"
            android:layout_marginTop="11dp"
            android:layout_marginStart="57dp"/>
        <ImageView
            android:id="@+id/morebutton_completed"
            android:layout_width="16dp"
            android:layout_height="19dp"
            android:src="@drawable/more_btn"
            android:layout_marginTop="9dp"
            android:layout_marginStart="234dp"
            android:layout_marginEnd="24dp"
            android:clickable="true"/>
    </RelativeLayout>
    
    <RelativeLayout
        android:layout_width="274dp"
        android:layout_height="37dp"
        android:background="@drawable/logoutbg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/completedbutton"
        android:layout_marginTop="24dp"
        android:layout_marginStart="43dp"
        android:layout_marginEnd="43dp"
        android:clickable="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Log Out"
            android:textSize="12sp"
            android:textColor="#F00"
            android:fontFamily="@font/inter_light"
            android:textFontWeight="1000"
            android:layout_marginTop="11dp"
            android:layout_marginStart="105dp"
            android:layout_marginEnd="122dp"/>
    </RelativeLayout>
    
    
    <View
        android:id="@+id/botrectangle"
        android:layout_width="0dp"
        android:layout_height="69dp"
        android:background="@drawable/rectangle_bot"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />
    <ImageView
        android:id="@+id/ClickHome"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/home_unselected"
        android:contentDescription="Home page"
        android:clickable="true"
        app:layout_constraintStart_toStartOf="@id/botrectangle"
        app:layout_constraintEnd_toStartOf="@id/CLickUnselectedProgress"
        app:layout_constraintTop_toTopOf="@id/botrectangle"
        app:layout_constraintBottom_toBottomOf="@id/botrectangle"
        android:layout_marginStart="40dp"
        app:layout_constraintHorizontal_chainStyle="spread_inside"/>
    <ImageView
        android:id="@+id/CLickUnselectedProgress"
        android:layout_width="39dp"
        android:layout_height="45dp"
        android:src="@drawable/progress_unselected"
        android:contentDescription="Progress page"
        android:clickable="true"
        app:layout_constraintStart_toEndOf="@id/ClickHome"
        app:layout_constraintEnd_toStartOf="@id/ClickUnselectedCategories"
        app:layout_constraintTop_toTopOf="@id/botrectangle"
        app:layout_constraintBottom_toBottomOf="@id/botrectangle"
        app:layout_constraintHorizontal_chainStyle="spread_inside"/>
    <ImageView
        android:id="@+id/ClickUnselectedCategories"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:src="@drawable/categories_unselected"
        android:contentDescription="Categories page"
        android:clickable="true"
        app:layout_constraintStart_toEndOf="@id/CLickUnselectedProgress"
        app:layout_constraintEnd_toStartOf="@id/ClickUnselectedCalendar"
        app:layout_constraintTop_toTopOf="@id/botrectangle"
        app:layout_constraintBottom_toBottomOf="@id/botrectangle"
        app:layout_constraintHorizontal_chainStyle="spread_inside"/>
    <ImageView
        android:id="@+id/ClickUnselectedCalendar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/calendar_unselected"
        android:contentDescription="Calendar Page"
        android:clickable="true"
        app:layout_constraintStart_toEndOf="@id/ClickUnselectedCategories"
        app:layout_constraintEnd_toStartOf="@id/ClickUnselectedUser"
        app:layout_constraintTop_toTopOf="@id/botrectangle"
        app:layout_constraintBottom_toBottomOf="@id/botrectangle"
        app:layout_constraintHorizontal_chainStyle="spread_inside"/>
    <ImageView
        android:id="@+id/ClickUnselectedUser"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="@drawable/user_selected"
        android:contentDescription="User page"
        android:clickable="true"
        app:layout_constraintStart_toEndOf="@id/ClickUnselectedCalendar"
        app:layout_constraintEnd_toEndOf="@id/botrectangle"
        app:layout_constraintTop_toTopOf="@id/botrectangle"
        app:layout_constraintBottom_toBottomOf="@id/botrectangle"
        android:layout_marginEnd="40dp"
        app:layout_constraintHorizontal_chainStyle="spread_inside"/>


</androidx.constraintlayout.widget.ConstraintLayout>