<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgcolor">
    
    <ImageView
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:src="@drawable/bubble"
        android:layout_alignParentRight="true"
        android:layout_marginRight="-100dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="-100dp"/>
    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/bubble"
        android:layout_alignParentRight="true"
        android:layout_marginRight="65dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="155dp"/>
    <ImageView
        android:layout_width="100000dp"
        android:layout_height="450dp"
        android:src="@drawable/bubble"
        android:layout_alignParentRight="true"
        android:layout_marginRight="-130dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="-380dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="-130dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Log In"
        android:textSize="32sp"
        android:textColor="#205375"
        android:fontFamily="@font/inter_bold"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="46dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="123dp">
    </TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please log in to continue."
        android:textSize="16sp"
        android:textColor="#1F2122"
        android:fontFamily="@font/inter_light"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="48dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="162dp">
    </TextView>
    
    <RelativeLayout
        android:layout_width="295dp"
        android:layout_height="36dp"
        android:background="@drawable/bg_emailandpassword"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="33dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="238dp">
        <ImageView
            android:layout_width="35dp"
            android:layout_height="30dp"
            android:src="@drawable/email_pic"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:paddingStart="12dp"/>
        <EditText
            android:layout_width="295dp"
            android:layout_height="36dp"
            android:id="@+id/EditTxtEmail"
            android:hint="Email"
            android:inputType="textEmailAddress"
            style="@style/FixEditText"
            android:gravity="center_vertical"
            android:paddingStart="43dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="295dp"
        android:layout_height="36dp"
        android:background="@drawable/bg_emailandpassword"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="33dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="288dp">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:src="@drawable/password"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:paddingStart="12dp"
            android:scaleType="centerCrop"/>
        <EditText
            android:layout_width="295dp"
            android:layout_height="36dp"
            android:id="@+id/EditTxtPassword"
            android:hint="Password"
            android:inputType="textPassword"
            style="@style/FixEditText"
            android:gravity="center_vertical"
            android:paddingStart="43dp"/>
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Forgot your password?"
        android:textSize="12sp"
        android:textColor="#000000"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="84dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="349dp">
    </TextView>
    <TextView
        android:id="@+id/redirectpasswordchange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/clickable_text"
        android:textSize="12sp"
        android:textColor="#205375"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="212dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="349dp"
        android:clickable="true"
        android:onClick="onTextClicked">
    </TextView>
    
    <Button
        android:layout_width="295dp"
        android:layout_height="41dp"
        android:id="@+id/LoginButton"
        android:backgroundTint="@color/Splashbg"
        android:text="LOG IN"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:fontFamily="@font/inter_bold"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="33dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="389dp">
    </Button>
    <Button
        android:id="@+id/CreateAccButton"
        android:layout_width="295dp"
        android:layout_height="41dp"
        android:backgroundTint="#E8E2E2"
        android:text="CREATE ACCOUNT"
        android:textSize="14sp"
        android:textColor="#545454"
        android:fontFamily="@font/inter_bold"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="33dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="439dp">
    </Button>
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="or log in using"
        android:textSize="12sp"
        android:textColor="#000000"
        android:fontFamily="@font/inter_light"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="139dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="500dp">
    </TextView>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/fb_bg"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="108dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="540dp">
    </ImageView>
    <ImageView
        android:layout_width="61dp"
        android:layout_height="61dp"
        android:src="@drawable/facebook_logo"
        android:id="@+id/clickfb"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="108dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="540dp"
        android:clickable="true"
        android:onClick="onImageClicked">
    </ImageView>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/google_bg"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="192dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="540dp">
    </ImageView>
    <ImageView
        android:layout_width="61dp"
        android:layout_height="61dp"
        android:src="@drawable/google_logo"
        android:id="@+id/ClickGoogle"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="192dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="540dp">
    </ImageView>

</RelativeLayout>