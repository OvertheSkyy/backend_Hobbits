<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/bgcolor">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide_start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.1" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide_end"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.9" />

    <ImageView
        android:id="@+id/back_forgotPassword"
        android:layout_width="39dp"
        android:layout_height="39dp"
        android:src="@drawable/left"
        android:clickable="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="15dp"
        android:layout_marginTop="37dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset Password"
        android:textSize="32sp"
        android:textColor="#205375"
        android:fontFamily="@font/inter_bold"
        app:layout_constraintStart_toStartOf="@id/guide_start"
        app:layout_constraintEnd_toEndOf="@id/guide_end"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="138dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create a new password below to\nrecover your account."
        android:textSize="15sp"
        android:textColor="#545454"
        android:textAlignment="center"
        android:fontFamily="@font/inter_light"
        app:layout_constraintStart_toStartOf="@id/guide_start"
        app:layout_constraintEnd_toEndOf="@id/guide_end"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="239dp" />
    <RelativeLayout
        android:layout_width="295dp"
        android:layout_height="36dp"
        android:background="@drawable/bg_emailandpassword"
        app:layout_constraintStart_toStartOf="@id/guide_start"
        app:layout_constraintEnd_toEndOf="@id/guide_end"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="317dp">
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/password"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:paddingStart="13dp"
            android:scaleType="centerCrop"/>
        <EditText
            android:id="@+id/EditTxtResetNewPassword"
            android:layout_width="290dp"
            android:layout_height="36dp"
            android:hint="New Password"
            android:textSize="12sp"
            android:textColor="#1F2122"
            android:fontFamily="@font/inter_light"
            android:inputType="textVisiblePassword"
            style="@style/FixEditText"
            android:gravity="center_vertical"
            android:paddingStart="43dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="295dp"
        android:layout_height="36dp"
        android:background="@drawable/bg_emailandpassword"
        app:layout_constraintStart_toStartOf="@id/guide_start"
        app:layout_constraintEnd_toEndOf="@id/guide_end"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="362dp">
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/password"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:paddingStart="13dp"
            android:scaleType="centerCrop"/>
        <EditText
            android:id="@+id/EditTxtResetConfirmNewPassword"
            android:layout_width="290dp"
            android:layout_height="36dp"
            android:hint="Confirm New Password"
            android:textSize="12sp"
            android:textColor="#1F2122"
            android:fontFamily="@font/inter_light"
            android:inputType="textVisiblePassword"
            style="@style/FixEditText"
            android:gravity="center_vertical"
            android:paddingStart="43dp"/>
    </RelativeLayout>
    <Button
        android:id="@+id/Button_restpassword"
        android:layout_width="295dp"
        android:layout_height="41dp"
        android:text="Reset Password"
        android:textSize="14sp"
        android:textColor="@color/white"
        android:fontFamily="@font/inter_light"
        android:backgroundTint="#D7942E"
        app:layout_constraintStart_toStartOf="@id/guide_start"
        app:layout_constraintEnd_toEndOf="@id/guide_end"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="475dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>